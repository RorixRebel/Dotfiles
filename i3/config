#		inactive_workspace $bg	 		$bg 		$ig
#		urgent_workspace   $bg   		$bg   		$ig
#		}
#}

#KEYBINDINGS
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# # Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#Control keys
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks

#ROFI
bindsym $mod+space exec rofi -show combi -modi combi -font "System San Francisco Display 15" -config ~/.config/rofi/rofi.config

#Custom app shortcuts
bindsym $mod1+g 	exec google-chrome
bindsym $mod1+f 	exec thunar
bindsym $mod1+r      	exec gnome-terminal -e ranger
bindsym $mod1+s		exec gnome-terminal -e ncmpcpp 
bindsym $mod1+v		exec virtualbox
bindsym $mod1+t		exec gnome-terminal -e tmux 

#Wallpapers and startup apps
exec --no-startup-id mopidy &
exec --no-startup-id ~/.dotfiles/polybar/wallpaper.sh &
exec_always compton -b --config ~/.dotfiles/compton/comptonrc
exec --no-startup-id dunst -conf ~/.config/dunst/dunstrc
exec --no-startup-id ckb
exec --no-startup-id google-chrome
exec --no-startup-id gnome-terminal
exec --no-startup-id /opt/franz/Franz
exec --no-startup-id slack
exec --no-startup-id spotify

#Assign apps to workspaces
assign [class="Google-chrome"] 	$workspace2
assign [class="Atom"] 		$workspace3
assign [class="Spotify"] 	$workspace4
assign [class="Thunar"] 	$workspace3
assign [class="vlc"] 		$workspace5
assign [class="Gnome-terminal"] $workspace1
assign [class="jetbrains-pycharm-ce"] $workspace8
assign [class="jetbrains-idea-ce"] $workspace8
assign [class="Slack"] 		$workspace6
assign [class="Franz"] 		$workspace6
assign [class="stremio"]	$workspace5
assign [class="ckb"]		$workspace6
assign [class="VirtualBox"]	$workspace7
assign [class="discord"]	$workspace6

#GAPS
hide_edge_borders 		both
for_window [class="^.*"] border pixel 0
for_window [class="Thunar"] floating enable 
for_window [class="Pavucontrol"] floating enable, move absolute center
for_window [window_role="pop-up"] floating enable,move absolute center
for_window [class="VirtualBox"] floating enable
for_window [class="vlc"] floating enable
for_window [class="Join"] floating enable, move absolute center

gaps inner 8
gaps outer 3

#82 = + in keypad
#89 = - in keypad
bindcode $mod+82		gaps outer current plus 9
bindcode $mod+Shift+82		gaps outer current minus 9

bindcode $mod+86		gaps inner current plus 9
bindcode $mod+Shift+86		gaps inner current minus 9


#Log out Reboot and PowerOFF
mode "Exit (L)ogout, (R)eboot, (P)oweroff, (S)Suspend" {
        bindsym $mod+r exec systemctl reboot
        bindsym $mod+l exit
        bindsym $mod+p exec systemctl poweroff
        bindsym $mod+s exec systemctl suspend, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Shift+q mode "Exit (L)ogout, (R)eboot, (P)oweroff, (S)Suspend"
