[global/wm]
margin-bottom = 0
margin-top = 0


[colors]
background = ${xrdb:color0}
foreground = ${xrdb:color7}
underlines = ${xrdb:color1}
right = ${xrdb:color2}
middle = ${xrdb:color3}
extra = #FFF 
left = ${xrdb:color5}
alert = #F00

[bar/main]
monitor = HDMI-0
monitor-fallback = eDP-1
width = 100%
height = 30
tray-position = right
fixed-center= true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.alert} 

padding-left = 1
padding-right = 1

module-margin-left = 2
module-margin-right = 2

font-0 = FontAwesome:pixelsize=10;1
font-1 = Dina:style=Bold:pixelsize=11;1
font-2 = siji:pixelsize=11;1
font-3 = Sauce Code Pro:pixelsize=11;1
font-4 = MaterialDesignIcons:pixelsize=10;1

modules-left = i3 xwindow
modules-center = weather mpd spotify
modules-right = updates battery backlight pulseaudio cpu memory filesystem temperature network date

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/network]
type = internal/network
interface = enp8s0
#interface = wlp58s0 
interval = 3.0
accumulate-stats = true
unknown-as-up = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <label-connected>
label-connected =  %downspeed:9%
#label-connected =  %ifname%%downspeed:9%
label-connected-foreground = ${colors.right}
label-disconnected =  !connected
label-disconnected-foreground = ${colors.foreground}
label-connected-underline = ${colors.underlines}

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label =   %percentage%
label-foreground = ${colors.right}
label-underline = ${colors.underlines}


[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
label-discharging =  %percentage%
label-discharging-foreground = ${colors.right}
label-discharging-underline = ${colors.underlines}
label-charging =  %percentage%
label-charging-foreground = ${colors.right}
label-charging-underline = ${colors.underlines}
label-full =  %percentage%


[module/weather]
type = custom/script
format =  <label>
format-foreground = ${colors.middle}
format-underline = ${colors.underlines}
exec = cat ~/dotfiles/polybar/temp.txt
click-left=python ~/dotfiles/polybar/weather.py


[module/updates]
type = custom/script
interval = 30
format =  <label>
format-foreground = ${colors.right}
format-underline = ${colors.underlines}
exec = pacman -Qu | wc -l


[module/xwindow]
type = internal/xwindow
label = %title:0:30:-%
label-active-font = 2
interval = 1
label-foreground = ${colors.left}
label-underline= ${colors.underlines}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted = <label-mounted>
label-mounted =  %mountpoint%:%percentage_used%% 
label-mounted-underline= ${colors.underlines}
label-mounted-foreground = ${colors.right}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = false 

label-mode-padding = 3
label-mode-foreground = ${colors.extra}
label-mode-background = ${colors.left}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.extra} 
label-focused-background = ${colors.background}
label-focused-underline = ${colors.underlines}
label-focused-padding = 3 

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.left}
label-unfocused-background = ${colors.background}
label-unfocused-underline = ${colors.underlines}
label-unfocused-padding = 3

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.left}
label-visible-background = ${colors.background}
label-visible-underline = ${colors.underlines}
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.left}
label-urgent-underline = ${colors.underlines}
label-urgent-padding = 3

[module/mpd]
type = internal/mpd 
format-online = <label-song>
label-song =  %artist% - %title%
format-online-foreground=${colors.middle}
format-online-underline=${colors.underlines}
host = 127.0.0.1
port = 6600

[module/spotify]
type=custom/script
format-prefix= " "
format-prefix-foreground = ${colors.right}
format-foreground = ${colors.middle}
format-underline = ${colors.underlines}
exec = $HOME/dotfiles/polybar/music

#[module/cpu]
#type=internal/cpu
#interval=2
#format-underline = ${colors.underlines}
#label=  %percentage%%
#label-foreground= ${colors.right}

#[module/memory]
#type = internal/memory
#interval = 2
#format-prefix = 
#format-prefix-foreground = ${colors.right}
#format-underline = ${colors.underlines}
#label = %percentage_used%%
#label-foreground = ${colors.right}

[module/date]
type = internal/date
date = %Y-%m-%d %H:%M
format-underline = ${colors.underlines}
label =  %date%
label-foreground = ${colors.right}

[module/pulseaudio]
type = internal/pulseaudio
interval = 10
use-ui-max = false
format-volume = <label-volume>
label-volume =  %percentage%
label-volume-foreground = ${colors.right}
label-volume-underline = ${colors.underlines}
format-muted-prefix = " "
format-muted-foreground = ${colors.foreground}
label-muted = Muted
click-left=pactl set-sink-volume @DEFAULT_SINK@ 0%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 75
format = <label>
format-foreground = ${colors.right}
format-underline = ${colors.underlines}
label =  %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.foreground}

[module/powermenu]
type = custom/menu
format-spacing = 1
label-open =  
label-open-foreground = ${colors.extra}
label-close = Cancel
label-close-foreground = ${colors.left}
label-separator = |
label-separator-foreground = ${colors.extra}

menu-0-0 = Power Off
menu-0-0-exec = shutdown now
menu-0-1 = Reboot
menu-0-1-exec = sudo reboot
menu-0-2 = Suspend 
menu-2-2-exec = systemctl suspend

[settings]
screenchange-reload = true
compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over


