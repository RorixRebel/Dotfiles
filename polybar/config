;====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = ${xrdb:color0}
foreground = ${xrdb:color7}
underlines = ${xrdb:color1}
right = ${xrdb:color2}
middle = ${xrdb:color3}
extra = #FFF 
left = ${xrdb:color5}
alert = #F00

[bar/main]
monitor = HDMI-0 
width = 98%
height = 30
;offset-x = 0
;offset-y = 5 
radius = 4.0
;fixed-center = True 

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.alert} 

;border-size = 0.5
;border-color = #fff

border-left-size = 35
border-top-size = 5

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = FontAwesome:pixelsize=11;1
font-1 = Dina:style=Bold:pixelsize=15;1
font-3 = Source Code Pro:pixelsize=12;1
font-2 = siji:pixelsize=15;1

modules-left = i3 xwindow
modules-center = date mpd weather
modules-right = updates volume cpu memory filesystem temperature powermenu

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/weather]
type = custom/script
interval = 10
format =  <label>
format-foreground = ${colors.middle}
format-underline = ${colors.underlines}
exec = ~/dotfiles/polybar/weather.py

[module/updates]
type = custom/script
interval = 30
format =  <label>
format-foreground = ${colors.right}
format-underline = ${colors.underlines}
exec = pacman -Qu | wc -l


[module/xwindow]
type = internal/xwindow
label = %title:0:30:-%
label-active-font = 2
interval = 1
label-foreground = ${colors.left}
label-underline= ${colors.underlines}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-mounted = <label-mounted>
label-mounted =  %mountpoint%:%percentage_used%% 
label-mounted-underline= ${colors.underlines}
label-mounted-foreground = ${colors.right}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = false 

label-mode-padding = 3
label-mode-foreground = ${colors.extra}
label-mode-background = ${colors.left}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${colors.extra} 
label-focused-background = ${colors.background}
label-focused-underline = ${colors.underlines}
label-focused-padding = 3 

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.left}
label-unfocused-background = ${colors.background}
label-unfocused-underline = ${colors.underlines}
label-unfocused-padding = 3

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.left}
label-visible-background = ${colors.background}
label-visible-underline = ${colors.underlines}
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 3

[module/mpd]
type = internal/mpd 
format-online = <label-song>
label-song =  %artist% - %title%
format-online-foreground=${colors.middle}
format-online-underline=${colors.underlines}
host = 127.0.0.1
port = 6600

[module/cpu]
type=internal/cpu
interval=2
format-underline = ${colors.underlines}
label=  %percentage%%
label-foreground= ${colors.right}

[module/memory]
type = internal/memory
interval = 2
format-prefix = 
format-prefix-foreground = ${colors.right}
format-underline = ${colors.underlines}
label = %percentage_used%%
label-foreground = ${colors.right}

[module/date]
type = internal/date
interval = 5
date = %b-%d
time = %H:%M
format-underline = ${colors.underlines}
label =  %date% - %time%
label-foreground = ${colors.middle}

[module/volume]
type = internal/volume
interval = 1
format-volume = <label-volume>
label-volume =  %percentage%
label-volume-foreground = ${colors.right}
label-volume-underline = ${colors.underlines}
format-muted-prefix = " MUTED"
format-muted-foreground = ${colors.foreground}
label-muted = sound muted

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 75
format = <label>
format-foreground = ${colors.right}
format-underline = ${colors.underlines}
label =  %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.foreground}

[module/powermenu]
type = custom/menu
format-spacing = 1
label-open =  
label-open-foreground = ${colors.extra}
label-close = Cancel
label-close-foreground = ${colors.left}
label-separator = |
label-separator-foreground = ${colors.extra}

menu-0-0 = Power Off
menu-0-0-exec = shutdown now
menu-0-1 = Reboot
menu-0-1-exec = sudo reboot
menu-0-2 = Suspend 
menu-2-2-exec = systemctl suspend

[settings]
screenchange-reload = true
compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
