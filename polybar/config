[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color2} 
foreground = ${xrdb:color7}
foreground-alt = ${xrdb.color5:#FFF}
primary = ${xrdb:color1}
secondary = ${xrdb:color7}
alert = ${xrdb:color2}

[bar/example]
monitor = ${env:MONITOR}
width = 100%
height = 30
;offset-x = 0
;offset-y = 5 
;radius = 7.0
fixed-center = True 

;background = #00000000
background = #3d3d3d5f
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.alert} 

border-size = 1
border-color = #00000000

padding-left = 0
padding-right = 2 

module-margin-left = 1
module-margin-right = 2

font-0 = FontAwesome:pixelsize=11;1
;font-2 = Roboto-Bold:fontformat=truetype:size=10:antialias=false;0
font-1 = Dina:style=Bold:pixelsize=15;1
font-3 = Source Code Pro:pixelsize=12;1
font-2 = siji:pixelsize=15;1

modules-left = i3 xwindow
modules-center = date weather mpd 
modules-right = redshift volume cpu memory filesystem temperature powermenu

;tray-position = right
;tray-padding = 5
;tray-transparent = false
;tray-background = ${colors.background} 
;tray-detached = false
;tray-underline = ${colors.primary}

wm-restack = i3
;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix-foreground = ${colors.foreground}
exec =ptpython ~/.dotfiles/polybar/weather.py
format-underline = ${colors.foreground-alt}

[module/redshift]
type = custom/script
interval = 5
exec = ~/.config/polybar/redshift.sh
format=<label>
format-prefix-underline=${colors.foreground}
label=%output%
label-underline=${colors.foreground-alt}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:-%
label-active-font = 2
interval = 1
label-underline= ${colors.foreground}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = ÔÉâ%percentage_used%% 
format-mounted = <label-mounted>
label-mounted-underline= ${colors.foreground-alt}
label-mounted-foreground = ${colors.foreground}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = false 

label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.primary}
label-focused-underline = ${colors.foreground-alt}
label-focused-padding = 2 

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${colors.background}
label-visible-underline = ${colors.foreground-alt}
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/mpd]
type = internal/mpd 
format-online = <label-song> <icon-prev> <icon-stop>  <icon-next>  
label-song = ùÑû %artist% - %title%
format-online-underline=${colors.foreground-alt}

host = 127.0.0.1
port = 6600

icon-prev = ÓÇñ
icon-stop = ÓÇô
icon-play = ÓÇö
icon-pause = ÓÇõ
icon-next = ÓÇú

label-song-maxlen = 55
label-song-ellipsis = true

bar-progress-width = 35
bar-progress-indicator = |
bar-progress-fill = ‚îÄ
bar-progress-empty = ‚îÄ

[module/cpu]
type=internal/cpu
interval=2
format-prefix=Ôáæ
format-prefix-foreground=${colors.foreground}
format-underline = ${colors.foreground-alt}
label=%percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = Ôà≥  
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.foreground-alt}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5
date = %b-%d
time = %H:%M

format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.foreground-alt}
label = %date% - %time%

[module/volume]
type = internal/volume
interval = 1
format-volume = <label-volume> 
label-volume = ÔÄ®%percentage%
label-volume-foreground = ${colors.foreground}
label-volume-underline = ${colors.foreground-alt}

format-muted-prefix = "ÔÄ¶"
format-muted-foreground = ${colors.foreground}
;label-muted = sound muted


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 75
format-prefix = ÔÅ≠
format = <label>
format-underline = ${colors.foreground-alt}
;format-warn = <ramp> <lael-warn>
;format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.foreground}

[module/powermenu]
type = custom/menu
format-spacing = 1
label-open = ÔÄë 
label-open-foreground = ${colors.secondary}
label-close = ÓÅ• cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

menu-3-0 = suspend
menu-3-0-exec = sudo suspend
menu-3-1 = cancel

[settings]
screenchange-reload = true
compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

